@model PurpleBricksDemo.Web.Areas.Buyer.Models.OfferRequestViewModel

@{
    ViewBag.Title = "Make Offer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("MakeOffer", "Default", FormMethod.Post, new { id = "validate" }))
                    {
                        <fieldset>
                            <div class="form-group">
                                <label>Your Price:</label>
                                @Html.TextBoxFor(z => z.Price, new { @class="form-control", @placeholder="price", @required="required", @type="number" })
                            </div>
                            <div class="form-group">
                                @Html.HiddenFor(z => z.PropertyId, new { @class="form-control" })
                                @Html.ValidationSummary()
                            </div>
                            <br>
                            <button class="btn btn-lg btn btn-block">Make Offer</button>
                        </fieldset>
                    }